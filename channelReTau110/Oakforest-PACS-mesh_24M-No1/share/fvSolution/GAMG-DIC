FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        tolerance        1e-6;
	relTol           0.05;
        maxIter          5000;

        solver           GAMG;
	smoother         DIC;
        agglomerator             faceAreaPair;
        cacheAgglomeration       true;
	directSolveCoarsest      false;
        mergeLevels              1;
        nPreSweeps               0;
        nPostSweeps              2;
        nFinestSweeps            2;
        maxPreSweeps             4;
        preSweepsLevelMultiplier 1;
        interpolateCorrection    0;
        scaleCorrection          1;
        nCellsInCoarsestLevel    10;
    }

    pFinal
    {
        $p;
        relTol           0;
    }

    U
    {
        solver           PBiCG;
        preconditioner   DILU;
        tolerance        1e-05;
        relTol           0.1;

        maxIter          5000;
    }

    UFinal
    {
        $U;
        relTol           0;
    }
}

PIMPLE
{
    nOuterCorrectors 1;
    nCorrectors     2;
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       0;
}

